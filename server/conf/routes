# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                              controllers.Application.index
#POST        /addRace               controllers.Application.addRace
GET        /showRace/:id                  controllers.Application.showRace(id)
#POST        /startRace/:id         controllers.Application.startRace(id)

GET        /boatSocket/:id/:raceId        controllers.Application.boatSocket(id, raceId)

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                  controllers.Assets.at(path="/public", file)
