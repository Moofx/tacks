
GET         /                                       controllers.Application.index
GET         /run/:timeTrialId                       controllers.Application.playTimeTrial(timeTrialId: String)
GET         /play/:raceId                           controllers.Application.playRace(raceId: String)
GET         /watch/:raceId                          controllers.Application.watchRace(raceId: String)

GET         /time-trials/leaderboard                controllers.TimeTrials.leaderboard
GET         /time-trials/:id                        controllers.TimeTrials.show(id)

POST        /users/create                           controllers.Users.create
GET         /users/:id                              controllers.Users.show(id: String)
POST        /users/updateStatus                     controllers.Users.updateStatus

GET         /login                                  controllers.Auth.askLogin
POST        /login                                  controllers.Auth.submitLogin
GET         /logout                                 controllers.Auth.logout

POST        /api/login                              controllers.Api.login
GET         /api/racesStatus                        controllers.Api.racesStatus
GET         /api/onlineUsers                        controllers.Api.onlinePlayers
POST        /api/createRace                         controllers.Api.createRace
GET         /api/currentUser                        controllers.Api.currentUser
POST        /api/setName                            controllers.Api.setName

GET         /ws/playerSocket/:raceId                controllers.Api.racePlayerSocket(raceId)
GET         /ws/watcherSocket/:raceId               controllers.Api.raceWatcherSocket(raceId)
GET         /ws/timeTrialSocket/:timeTrialId        controllers.Api.timeTrialSocket(timeTrialId)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                           controllers.Assets.at(path="/public", file)


