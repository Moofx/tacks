
GET         /                                       controllers.Application.index
POST        /setName                                controllers.Application.setName
POST        /races/create                           controllers.Application.createRace

GET         /races/:id/play                         controllers.Game.playRace(id)
GET         /races/:id/play/socket/:playerId        controllers.Game.socket(id, playerId)


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                           controllers.Assets.at(path="/public", file)
