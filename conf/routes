
GET         /                               controllers.Application.index
GET         /play/:raceId                   controllers.Application.playRace(raceId: String)

POST        /users/create                   controllers.Users.create
GET         /users/:handle                  controllers.Users.show(handle: String)
POST        /users/updateStatus             controllers.Users.updateStatus

GET         /login                          controllers.Auth.askLogin
POST        /login                          controllers.Auth.submitLogin
GET         /logout                         controllers.Auth.logout

GET         /api/racesStatus                controllers.Api.racesStatus
GET         /api/onlineUsers                controllers.Api.onlinePlayers
POST        /api/createRace                 controllers.Api.createRace
GET         /api/currentUser                controllers.Api.currentUser
POST        /api/setName                    controllers.Api.setName

GET         /ws/playerSocket/:raceId        controllers.Api.playerSocket(raceId)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                   controllers.Assets.at(path="/public", file)


