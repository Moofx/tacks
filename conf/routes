
GET         /api/racesStatus                 controllers.Api.racesStatus
POST        /api/createRace                  controllers.Api.createRace
GET         /api/getRace/:id                 controllers.Api.getRace(id)
GET         /api/currentUser                 controllers.Api.currentUser
POST        /api/setName                     controllers.Api.setName

GET         /api/playerSocket/:raceId        controllers.Api.playerSocket(raceId)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                    controllers.Assets.at(path="/public", file)

