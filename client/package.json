{
  "name": "tacks-client",
  "devDependencies": {
    "node-sass": "3.3.3",
    "browserify": "10.2.3",
    "uglifyify": "3.0.1",
    "watchify": "3.2.1",
    "watch": "0.16.0"
  },
  "engines": {
    "node": ">=0.10.0"
  },
  "private": true,
  "scripts": {
    "start": "npm run watch",

    "watch": "npm run watch-elm & npm run watch-js & npm run watch-sass",
    "watch-elm": "watch 'npm run build-elm --silent' src",
    "watch-js": "dev=true watchify scripts/setup.js -o ../public/javascripts/setup.js -dv",
    "watch-sass": "watch 'npm run build-sass --silent' styles",

    "build": "npm run build-elm & npm run build-js & npm run build-sass",
    "build-elm": "elm make src/Main.elm --output ../public/javascripts/Main.js",
    "build-js": "browserify scripts/setup.js -o ../public/javascripts/setup.js -g uglifyify",
    "build-sass": "node-sass -o ../public/stylesheets styles/main.scss"
  },
  "dependencies": {
    "bootstrap-sass": "~3.3.5",
    "jquery": "~2.1.4"
  },
  "browserify-shim": {}
}
